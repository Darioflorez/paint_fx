                        <HBox BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="buttonUndo" mnemonicParsing="false" text="Undo">
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" top="20.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="buttonRedo" mnemonicParsing="false" text="Redo">
                                 <HBox.margin>
